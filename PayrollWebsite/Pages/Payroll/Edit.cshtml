@page
@model PayrollWebsite.Pages.Payroll.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Payroll</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Payroll.PayrollId" />
            <div class="form-group">
                <label asp-for="Payroll.StartDate" class="control-label"></label>
                <input asp-for="Payroll.StartDate" class="form-control" />
                <span asp-validation-for="Payroll.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payroll.StopDate" class="control-label"></label>
                <input asp-for="Payroll.StopDate" class="form-control" />
                <span asp-validation-for="Payroll.StopDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payroll.EmployeeId" class="control-label"></label>
                <select asp-for="Payroll.EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="Payroll.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
